@using Microsoft.AspNetCore.Identity
@using C3Apparel.Areas.Identity.Data

@inject SignInManager<C3ApparelUser> SignInManager
@inject UserManager<C3ApparelUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/login", new { area = "" })">
        <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    </form>
}


