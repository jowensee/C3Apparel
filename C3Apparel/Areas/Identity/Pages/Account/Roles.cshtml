@page "/add-role"
@model C3Apparel.Areas.Identity.Pages.Account.Roles
@{
    ViewData["Title"] = "Add role";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                
                <label asp-for="Input.RoleName" class="form-label"></label>
                <input asp-for="Input.RoleName" class="form-control" autocomplete="username" aria-required="true"/>
                <span asp-validation-for="Input.RoleName" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Create Role</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
