@page "/admin/reset-password"
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
@{
    Layout = "~/Features/Shared/_CMSLayout.cshtml";
}
<nav>
    <a href="/admin/register">Add New User</a>
    <a href="/admin/reset-password" class="active">Reset User Password</a>
</nav>
<div class="main-caption">
    Reset Password
</div>
<div id="editMain">
    <div class="form">
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="success-panel">@Model.Message</div>   
        }
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
            <div class="field" data-validation="">
                <label asp-for="Input.Email" class="label"></label>
                <div class="control">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" type="text" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="field" data-validation="">
                <label asp-for="Input.Password" class="label"></label>
                <div class="control">
                    <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" type="password"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="field" data-validation="">
                <label asp-for="Input.ConfirmPassword" class="label"></label>
                <div class="control">
                    <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" type="password"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div>
                <button id="registerSubmit" type="submit" class="button is-link">Reset</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
