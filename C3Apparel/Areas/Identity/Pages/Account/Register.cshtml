@page "/admin/register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@{
    Layout = "~/Features/Shared/_CMSLayout.cshtml";
}
<nav>
    <a href="/admin/register" class="active">Add New User</a>
    <a href="/admin/reset-password">Reset User Password</a>
</nav>
<div class="main-caption">
    Register User
</div>
<div id="editMain">
    <div class="form">
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="success-panel">@Model.Message</div>   
        }
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="field" data-validation="">
                <label asp-for="Input.Email" class="label"></label>
                <div class="control">
                    <input asp-for="Input.Email" autocomplete="username" aria-required="true" type="text"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="field" data-validation="">
                <label asp-for="Input.Password" class="label"></label>
                <div class="control">
                    <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" type="password"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="field" data-validation="">
                <label asp-for="Input.ConfirmPassword" class="label"></label>
                <div class="control">
                    <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" type="password"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="field" data-validation="">
                <label asp-for="Input.Role" class="label"></label>
                <div class="control">
                    <div class="select">
                        <select asp-for="Input.Role">
                            <option value="Admin">Admin</option>
                            <option value="AUClient">AUClient</option>
                            <option value="NZClient">NZClient</option>
                        </select>
                    </div>
                </div>
            </div>
            <div>
                <button id="registerSubmit" type="submit" class="button is-link">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
