@using Microsoft.AspNetCore.Mvc.TagHelpers
@model C3Apparel.Features.Admin.FreightWeighPricing.FreightWeightPricingEditViewModel
@{
   Layout = "_CMSLayout";
}
@section Styles {
    <link rel="stylesheet" href="/client/dist/styles/freight-weight-prices.css">
}

@section Scripts {
   <script src="/client/dist/scripts/freight-weight-prices.js" asp-append-version="true"></script>
}
<div class="main-caption">
   Freight-weight Prices
</div>
<div id="editMain" data-method="POST" data-endpoint-get="@Url.Action("GetFreightWeightSettings", "FreightWeightSettings")" data-endpoint-save="@Url.Action("SaveFreightWeightSettings", "FreightWeightSettings")">

    <partial name="~/Features/Admin/_FormValidationError.cshtml"/>
    <div class="form-settings">
        <div class="action">
            <button id="btnSave" class="button is-link" v-on:click.prevent="saveSettings()">Save</button>
        </div>

        <h3>US</h3>
        <table class="table-freight-weight">
            <tr>
                <th></th>
                <th>Weight (kg)</th>
                <th>C3 Markup %</th>
                <th>AU Freight per KG</th>
                <th>AU Freight per Surcharge</th>
                <th>NZ Freight per KG</th>
                <th>NZ Freight per Surcharge</th>
                <th>Column Header 1</th>
                <th>Column Header 2</th>
            </tr>
            <tr v-for="(row, index) in usFreightSettings">
                <th>{{row.codeName}}</th>
                <td>
                    <input type="text" v-model="row.weightInKg" class="text-number" />
                </td>
                <td>
                    <input type="text" v-model="row.marginInDecimal" class="text-number" />
                </td>
                <td>
                    <input type="text"v-model="row.auFreightPerKg" class="text-number" />
                </td>
                <td>
                    <input type="text"v-model="row.auFreightSurcharge" class="text-number" />
                </td>
                <td>
                    <input type="text" v-model="row.nzFreightPerKg" class="text-number" />
                </td>
                <td>
                    <input type="text" v-model="row.nzFreightSurcharge" class="text-number" />
                </td>
                <td>
                    <input type="text" v-model="row.columnHeader1" />
                </td>
                <td>
                    <input type="text" v-model="row.columnHeader2" />
                </td>
            </tr>
        </table>
        <h3>EURO</h3>
        <table class="table-freight-weight">
            <tr>
                <th></th>
                <th>Weight (kg)</th>
                <th>C3 Markup %</th>
                <th>AU Freight per KG</th>
                <th>AU Freight per Surcharge</th>
                <th>NZ Freight per KG</th>
                <th>NZ Freight per Surcharge</th>
                <th>Column Header 1</th>
                <th>Column Header 2</th>
            </tr>
            <tr v-for="(row, index) in euroFreightSettings">
                <th>{{row.codeName}}</th>
                <td>
                    <input type="text" v-model="row.weightInKg" class="text-number" />
                </td>
                <td>
                    <input type="text" v-model="row.marginInDecimal" class="text-number" />
                </td>
                <td>
                    <input type="text"v-model="row.auFreightPerKg" class="text-number" />
                </td>
                <td>
                    <input type="text"v-model="row.auFreightSurcharge" class="text-number" />
                </td>
                <td>
                    <input type="text" v-model="row.nzFreightPerKg" class="text-number" />
                </td>
                <td>
                    <input type="text" v-model="row.nzFreightSurcharge" class="text-number" />
                </td>
                <td>
                    <input type="text" v-model="row.columnHeader1" />
                </td>
                <td>
                    <input type="text" v-model="row.columnHeader2" />
                </td>
            </tr>
        </table>
    </div>
</div>